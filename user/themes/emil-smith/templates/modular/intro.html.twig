{% macro pageLinkName(text) %}{{ text|lower|replace({' ':'_'}) }}{% endmacro %}

<div class="module intro" id="{{ _self.pageLinkName(page.header.menu) }}">


    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8">
            {% if uri.query('hi') == 'there' %}
                <h1 class="intro-msg">Hi, Roli ;)</h1>
                <h3>This is creepy, I know. Whatever, let's talk jobs. Take a look around and check out my work!</h3>
            {% else %}
                <h1 class="intro-msg">{{ page.header.intro_msg }}</h1>
                {{ page.content }}
                <a href="#get_in_touch" class="btn smoothscroll"><span>Get in touch</span></a>
            {% endif %}
            </div>
        </div>
    </div>
</div>