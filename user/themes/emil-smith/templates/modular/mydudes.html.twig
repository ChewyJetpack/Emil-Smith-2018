{% macro pageLinkName(text) %}{{ text|lower|replace({' ':'_'}) }}{% endmacro %}

<div class="module my-dudes" id="{{ _self.pageLinkName(page.header.menu) }}">

    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6">
                <div class="dude-content">
                    <h1 class="sep">{{ page.header.title }}</h1>
                    {{ page.content | markdown }}
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="row">
                {% for dude in page.header.dudes %}
                    <div class="col-4">
                        <div class="dude-wrap" style="background:url(images/{{ dude.dude }}) center center / contain no-repeat;">
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>

</div>